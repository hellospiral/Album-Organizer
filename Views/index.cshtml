<head>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
</head>

<h1>Album Organizer</h1>

@if (@Model.Count == 0)
{
    <h3>Welcome!</h3>
}

<ul>
    @foreach (var album in Model)
    {
        <li>@album.GetTitle() by @album.GetArtistName()</li>
    }
</ul>
<p><a href="/album/new">Input a new album</a></p>
<p><a href="/searchbyartist">Search your collection by artist</a></p>